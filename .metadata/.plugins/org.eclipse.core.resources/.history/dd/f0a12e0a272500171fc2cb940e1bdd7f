package gamezone;

import java.util.Random;
import java.util.Scanner;

public class RPS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int rock;
		int scissors;
		int paper;
		int Choice;
		Random rn = new Random();
		int answer = rn.nextInt(10) + 1;
		
		Scanner input = new Scanner(System.in); 
		
		System.out.print("Please choose 1 for rock, 2 for Paper, or 3 for Scissors.>>> " + answer);
		
		Choice = input.nextInt();
		if(Choice == 1)
		{
			System.out.println("You said Rock. ");
			
			
		}
		if(Choice == 2)
		{
			System.out.println("You said Paper. ");
			
			
		}
		if(Choice == 3)
		{
			System.out.println("You said Sissors. ");
			
			
		}
		if(Choice >= 4)
		{
			System.out.println("Thats not a choice ");
		}
	}

}
