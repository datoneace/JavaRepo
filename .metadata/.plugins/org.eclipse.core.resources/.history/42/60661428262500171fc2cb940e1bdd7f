package gamezone;

import java.util.Scanner;

public class RPS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int rock;
		int scissors;
		int paper;
		int Choice;
		int number = (int) (Math.random(1, 2, 3)); 
		
		Scanner input = new Scanner(System.in); 
		
		System.out.print("Please choose 1 for rock, 2 for Paper, or 3 for Scissors.>>> ");
		Choice = input.nextInt();
		if(Choice == 1)
		{
			System.out.println("You said Rock. ");
			System.out.println("They said " + number);
			
		}
		if(Choice == 2)
		{
			System.out.println("You said Paper. ");
			
			
		}
		if(Choice == 3)
		{
			System.out.println("You said Sissors. ");
			
			
		}
		if(Choice >= 4)
		{
			System.out.println("Thats not a choice ");
		}
	}

}
